{% extends 'base.html.twig' %}

{% block header_img %}{% endblock %}

{% block header_title %}<h1>Liste des tâches associées à un utilisateur anonyme</h1>{% endblock %}

{% block body %}
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nom de la tâche</th>
                    <th>Contenue de la tâche</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for task in tasks %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ task.title }}</td>
                        <td>{{ task.content }}</td>
                        <td>
                            <a href="{{ path('task_anonymous_delete', {'id' : task.id}) }}" class="btn btn-danger btn-sm">supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}