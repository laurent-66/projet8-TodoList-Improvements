{% extends 'base.html.twig' %}


{% block header_title %}
    <h1>Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
{% endblock %}

{% block body %}


            <div class="row mb-2">
                <div class="col-sm-12 col-md-6 px-3">
                    <a href="{{ path('user_create') }}" class="btn btn-primary my-2 mx-2 d-block mx-auto pr-2">Créer un utilisateur</a>
                </div>            
            </div>





    <div class="row mx-0">
        <div class="col-sm-12 col-md-4 px-0">
            <a href="{{ path('task_create') }}" class="btn btn-success my-2 mx-2 d-block mx-auto">Créer une nouvelle tâche</a>
        </div>
        <div class="col-sm-12 col-md-4 px-0">
            <a href="{{ path('to-do_list') }}" class="btn btn-info my-2 mx-2 d-block px-3">Consulter la liste des tâches à faire</a>
        </div>
        <div class="col-sm-12 col-md-4 px-0">
            <a href="{{ path('task_completed') }}" class="btn btn-secondary my-2 mx-2 d-block mx-auto">Consulter la liste des tâches terminées</a>
        </div>
    </div>
    <div class="row mx-0">
        {% if is_granted('ROLE_ADMIN') %}
            <div class="col-sm-12 col-md-6 px-0">
                <a href="{{ path('users_list') }}" class="btn btn-primary my-2 mx-2 d-block mx-auto pr-2">Gestion des utilisateurs</a>
            </div>
            <div class="col-sm-12 col-md-6 px-0">
                <a href="{{ path('tasksUsersAnonymous') }}" class="btn btn-primary my-2 mx-2 d-block mx-auto pl-2">Gestion des tâches</a>
            </div>        
        {% endif %}
    </div>
{% endblock %}